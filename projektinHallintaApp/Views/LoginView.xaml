<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projektinHallintaApp.Views.LoginView"
             Shell.NavBarIsVisible="False">

    <ContentPage.Content>
        <Grid>
            <!-- Taustakuva -->
            <Image Source="Resources/Images/tausta3.png"
                   Aspect="AspectFill"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand" />

            <!-- Sisältö -->
            <StackLayout Grid.Row="0" 
                 HorizontalOptions="Center" 
                 VerticalOptions="Center" 
                 Spacing="20">
                <Label Text="Welcome" 
               FontSize="24" 
               HorizontalOptions="Center" />

                <Label Text="Login with username" 
               FontSize="16" 
               HorizontalOptions="Center" />

                <Entry Placeholder="Enter your username" 
               PlaceholderColor="Coral"
               HorizontalOptions="Center" 
               WidthRequest="250" 
               x:Name="EmailEntry" />

                <Button Text="Login" 
                BackgroundColor="#6F6F6F"
                TextColor="White" 
                FontSize="16" 
                HorizontalOptions="Center" 
                WidthRequest="200" 
                Opacity="0.8"
                Clicked="OnLoginButtonClicked" />
            </StackLayout>
        
        </Grid>
    </ContentPage.Content>
</ContentPage>
